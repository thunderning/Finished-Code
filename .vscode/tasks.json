{
    "version": "0.1.0",
    "isShellCommand": true,
    "command": "g++",
    "args": ["-g","${file}","-o","${fileDirname}\\Homework_1_A.exe"],    // 编译命令参数 !!!要修改程序名 !!!
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}